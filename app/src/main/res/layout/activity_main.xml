<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffff"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/logScroll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#80ffffff"
        android:padding="8dp">

        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:textColor="#000000"
            android:textSize="14sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/connectionControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/logScroll"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#ff9933"
            android:padding="12dp"
            android:text="Connect"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ff9933"
            android:padding="12dp"
            android:text="Disconnect"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/commandGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/connectionControls"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btn_box1_led_on"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box1 LED ON"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box2_led_on"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box2 LED ON"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box3_led_on"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box3 LED ON"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box1_led_off"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box1 LED OFF"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box2_led_off"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box2 LED OFF"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box3_led_off"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box3 LED OFF"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box1_open"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box1 OPEN"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box2_open"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box2 OPEN"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box3_open"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box3 OPEN"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box1_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box1 CLOSE"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box2_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box2 CLOSE"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_box3_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff9933"
            android:padding="8dp"
            android:text="Box3 CLOSE"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

    </GridLayout>

</RelativeLayout>